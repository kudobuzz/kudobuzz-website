  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff5ee;
  padding: clamp(20px, 4vw, 40px) clamp(16px, 5vw, 60px);
  border-radius: 12px;
  box-shadow: 0 9px 16px 0 rgba(0, 0, 0, 0.04), 0 2px 3px 0 rgba(0, 0, 0, 0.10);
