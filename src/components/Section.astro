  display: flex;
  gap: clamp(8px, 3vw, 20px);
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.step-card {
  background: #f9f9f9;
  border-radius: 12px;
  border: 1px solid var(--Gray-50, #DBDEE3);
box-sizing: border-box;
  padding: 20px;
  width: 100%;
  text-align: center;
  
  transition: transform 0.3s ease;

}

.step-card:hover {
  transform: translateY(-5px);
}

.step-card h3 {
  font-size: 18px;
  font-weight: 700;
  margin-top: 15px;
  margin-bottom: 8px;
  color: #111;
}

