  font-size: 14px;
  color: #555;
  line-height: 1.5;
}

.icon {
  background: #fff;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.icon img {
  width: 24px;
  height: 24px;
}

.step-arrow {
  font-size: 20px;
  color: #bbb;
  margin:auto;
}

