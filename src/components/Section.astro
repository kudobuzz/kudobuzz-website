  max-width: var(--container-max);
  margin: 0 auto;
 }
.container-card-bottom{
  display: flex;
  justify-content: space-between;
  max-width: var(--container-max);
  margin: 0 auto;
  gap: clamp(12px, 4vw, 40px)
  
}
