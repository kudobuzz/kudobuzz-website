<section class="banner">
  <div class="banner-content">
    <h2>
      Ready To Turn Your Customer Content Into Your Highest-Converting Asset?
    </h2>
    <a href="#" class="btn-white">Start For Free</a>
  </div>

  <div class="banner-features">
    <div class="feature">
      <img class="checkmark" src="/assets/icon-check.svg" alt="" aria-hidden="true" /> No credit card
    </div>
    <div class="feature">
      <img class="checkmark" src="/assets/icon-check.svg" alt="" aria-hidden="true" /> Just results
    </div>
  </div>
</section>

<style>
.banner {
  background: #f28e35;
  border-radius: 28px;
  
  padding: 40px 60px;
  text-align: left;
  color: white;
  display: flex;
  flex-direction: column;
  gap: 24px;
  position: relative;
  top: -80px;

  width: 100%;       /* mengikuti parent */
  max-width: 1200px; /* batas maksimal */
  box-sizing: border-box;
}

.banner-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-content h2 {
  max-width: 700px;
  font-size: 28px;
  font-weight: 700;
  line-height: 1.3;
}



.banner-features {
  display: flex;
  gap: 40px;
  font-size: 16px;
  color: white;
}

.feature {
  display: flex;
  align-items: center;
  gap: 8px;
}

.checkmark {
  display: inline-block;
  width: 32px;
  height: 32px;
  object-fit: contain;
  vertical-align: middle;
  border:none;
}

@media (max-width: 1024px) {

  
    .banner{
          width: 90%;
    }
    .banner-content h2{
        max-width: 530px;
    }
}

@media (max-width: 768px) {

  
    .banner{
      padding: 20px 40px;
    }
    .banner-content h2{
      font-size:20px;
        max-width: 340px;
    }
}

@media (max-width: 425px) {
  .banner-content{
    display:block;
  }
  .banner-content a{
    margin:20px 0 0;
    display:block;
    text-align:center;
  }
}

</style>
