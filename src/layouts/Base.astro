---
import "../styles/global.css";
const {
  title = "Kudobuzz",
  description = "Collect product reviews, leverage social proof, and grow with Kudobuzz.",
} = Astro.props;
const site = Astro.site;
const canonicalUrl = site ? new URL(Astro.url.pathname, site).toString() : undefined;
const ogImage = site
  ? new URL("/assets/web-thumbnail.png", site).toString()
  : "/assets/web-thumbnail.png";
const organizationJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Kudobuzz",
  url: canonicalUrl ?? site?.origin ?? "https://kudobuzz.com",
  logo: site
    ? new URL("/assets/kudobuzz-logo.svg", site).toString()
    : "/assets/kudobuzz-logo.svg",
  sameAs: [
    "https://www.facebook.com/kudobuzz",
    "https://www.instagram.com/kudobuzz",
    "https://www.linkedin.com/company/kudobuzz/",
    "https://twitter.com/kudobuzz"
  ]
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
    />
    <link rel="icon" type="image/png" href="/assets/favicon.png" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta property="og:site_name" content="Kudobuzz" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Kudobuzz platform preview" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Kudobuzz platform preview" />
    <script type="application/ld+json">{JSON.stringify(organizationJsonLd)}</script>
    <slot name="head" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
