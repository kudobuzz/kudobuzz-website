    layout="center"
    colorScheme="white"
    padding="0px"
  />

  <Pricing
    tabs={pricingData.tabs}
    plansByTab={pricingData.plansByTab}
    modalContent={pricingData.modalContent}
/>

  <AddSpace color="transparent" />
  <AddSpace color="transparent" />
  <AddSpace color="transparent" />

<Footer
  branding={branding}
  columns={columns}
  advancedTitle={advancedTitle}
  advancedColumns={advancedColumns}
  socialLinks={socialLinks}
  bottom={bottom}
/>
</Base>
