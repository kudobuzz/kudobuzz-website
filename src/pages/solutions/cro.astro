---
import Base from "../../layouts/Base.astro";
import Navbar from '../../components/Navbar.astro';
import Footer from "../../components/Footer.astro";
import Hero from '../../components/Hero.astro';
import Section from '../../components/Section.astro';
import AddSpace from "../../components/AddSpace.astro";
import { menuItems } from "../../data/menuItems.js";
import { footerLinks } from "../../data/footerLinks.js";

export async function getStaticPaths() {
  // definisikan langsung di dalam fungsi
  const solutions = menuItems.find((item) => item.label === "Solutions")?.children || [];

  return solutions.map((item) => {
    const slug = item.link.split("/").pop(); // contoh: "product-reviews"
    return {
      params: { slug },
      props: { solution: item },
    };
  });
}

const { solution } = Astro.props;



const {
  branding,
  columns,
  advancedTitle,
  advancedColumns,
  social: socialLinks,
  bottom,
} = footerLinks;
---

<Base
  title="CRO — Kudobuzz"
  description="Use Kudobuzz CRO insights, testing, and automation to understand shopper behavior and remove friction from every funnel."
>
 <Navbar menuItems={menuItems} />
 <Hero 
      tag = "Conversion Rate Optimization"
      title = "Conversion Rate Optimization "
      titlehighlight = "that works while you sleep."
      subtitle = "Understand your shoppers. Optimize what matters. Convert more sales."
      description = "Kudobuzz CRO helps you unlock hidden revenue by showing exactly how visitors interact with your store — and what is stopping them from buying. Powered by AI and built for merchants, not analysts." 
      buttonText1 = "Try Kudobuzz Free" 
