---
import Base from "../../layouts/Base.astro";
import Navbar from '../../components/Navbar.astro';
import Footer from "../../components/Footer.astro";
import Hero from '../../components/Hero.astro';
import Section from '../../components/Section.astro';
import AddSpace from "../../components/AddSpace.astro";
import TrustedBrand from '../../components/TrustedBrand.astro';
import { menuItems } from "../../data/menuItems.js";
import { footerLinks } from "../../data/footerLinks.js";


export async function getStaticPaths() {
  // definisikan langsung di dalam fungsi
  const solutions = menuItems.find((item) => item.label === "Solutions")?.children || [];

  return solutions.map((item) => {
    const slug = item.link.split("/").pop(); // contoh: "product-reviews"
    return {
      params: { slug },
      props: { solution: item },
    };
  });
}

const { solution } = Astro.props;



const {
  branding,
  columns,
  advancedTitle,
  advancedColumns,
  social: socialLinks,
  bottom,
} = footerLinks;
